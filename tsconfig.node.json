{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./*"]
    },
    "types": ["chrome-types"]
  },
  "include": [
    "vite.config.ts",
    "manifest.config.ts",
    "manifest.json"
  ]
}

